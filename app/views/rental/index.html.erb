<p id="notice"><%= notice %></p>
<% if is_admin? %>
    <h2>ADMIN!</h2>
<% end %>
<h1>Listing Movies</h1>
<%= paginate @movies %>

<table>
  <thead>
  <tr>

    <th>Name</th>
    <th>Director</th>
    <!--th>Description</th-->
    <th>Year</th>
    <th>Length</th>
    <th>Format</th>
    <!--th>Thumbnail</th-->
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @movies.each do |movie| %>
      <tr>

        <td><%=link_to movie.proper_name ,rental_show_path(movie.id) %></td>
        <td><%= link_to movie.director ,movie_path(movie) %></td>
        <td><%#= truncate(movie.description.html_safe,:length => 20) %></td>
        <td><%= movie.year %></td>
        <td><%= movie.length %></td>
        <td><%= movie.format %></td>
        <td><%#= movie.image %></td>
        <td><%#= link_to image_tag( movie.thumbnail),movie %></td>
        <td><%= link_to 'Show', rental_show_path(movie.id) %></td>

      </tr>
  <% end %>
  </tbody>
</table>


